<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".StartScreen">


    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="290dp" app:srcCompat="@drawable/fade12"
            android:id="@+id/imageView2" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="34dp"
            app:layout_constraintBottom_toTopOf="@+id/ButtonToMain" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.0"
            android:scaleType="center"/>
    <Button
            android:text="LÄÄKELASKURI"
            android:layout_width="wrap_content"
            android:background="@drawable/button"
            android:layout_height="wrap_content"
            android:id="@+id/ButtonToMain"
            android:layout_marginTop="64dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4" android:layout_marginBottom="175dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="32dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toStartOf="@+id/buttonToMain"
            android:layout_marginEnd="15dp" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.992"/>
    <Button
            android:text="KÄYRÄ"
            android:layout_width="wrap_content"
            android:background="@drawable/button"
            android:layout_height="wrap_content"
            android:id="@+id/buttonToMain"
            android:layout_marginTop="64dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4" android:layout_marginBottom="175dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/ButtonToMain"
            android:layout_marginStart="15dp" app:layout_constraintVertical_bias="0.992"/>
    <TextView
            android:text="TERVETULOA!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="145dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="145dp"
            android:layout_marginTop="32dp" android:textStyle="bold"
            android:textSize="24sp" android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"/>
</android.support.constraint.ConstraintLayout>